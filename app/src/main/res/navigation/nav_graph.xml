<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="no.hiof.toyopoly.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <argument
            android:name="category"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_categoryFragment_to_adDetailFragment"
            app:destination="@id/adDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="no.hiof.toyopoly.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/createAdsFragment"
        android:name="no.hiof.toyopoly.CreateAdFragment"
        android:label="fragment_createAds"
        tools:layout="@layout/fragment_createad" >
        <action
            android:id="@+id/action_createAdsFragment_to_adDetailFragment"
            app:destination="@id/adDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="no.hiof.toyopoly.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="no.hiof.toyopoly.login.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/registerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/adDetailFragment"
        android:name="no.hiof.toyopoly.AdDetailFragment"
        android:label="fragment_ad_detail"
        tools:layout="@layout/fragment_ad_detail" >
        <action
            android:id="@+id/action_adDetailFragment_to_messageFragment"
            app:destination="@id/messageFragment" />
        <argument
            android:name="AdId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/messageFragment"
        android:name="no.hiof.toyopoly.MessageFragment"
        android:label="fragment_message"
        tools:layout="@layout/fragment_message" >
        <argument
            android:name="otherUserId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/allToysFragment"
        android:name="no.hiof.toyopoly.AllToysFragment"
        android:label="fragment_all_toys"
        tools:layout="@layout/fragment_all_toys" >
        <action
            android:id="@+id/action_allToysFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
        <action
            android:id="@+id/action_allToysFragment_to_adDetailFragment"
            app:destination="@id/adDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/googleLoginFragment"
        android:name="no.hiof.toyopoly.login.GoogleLoginFragment"
        android:label="fragment_google_login"
        tools:layout="@layout/fragment_google_login" />
</navigation>