<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="15dp"
    android:textColor="#C0C0C0"
    app:cardBackgroundColor="#774df2"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/tertiaryVariant"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ValueAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="169dp"
        app:layout_constraintLeft_toRightOf="@+id/cardView4"
        android:layout_marginStart="25dp"/>

    <TextView
        android:id="@+id/PriceAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/tokenImageInAd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_token_24"
        app:layout_constraintEnd_toStartOf="@id/PriceAd"
        app:layout_constraintBottom_toBottomOf="@id/PriceAd"
        app:layout_constraintTop_toTopOf="@id/PriceAd"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/token" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="134dp"
        android:layout_height="134dp"


        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="12dp"

        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintLeft_toLeftOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2">


        <ImageView
            android:id="@+id/adPresentationImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:contentDescription="@string/image_of_ad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>